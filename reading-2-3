<script>
   $(document).ready(function(){
        $(".test-container").mouseup(function(){
            $(this).contextmenu(function(){
                document.getElementById("menu-click-right").style.display = "block";
                document.getElementById("menu-click-right").style.zIndex = "1";
                document.getElementById("menu-click-right").style.top = event.pageY + "px";
                document.getElementById("menu-click-right").style.left = event.pageX + "px";
            });
            
        });
    });
</script>
