    let dapancau29 = document.querySelector("input[name = 'q-29']:checked").value;
        document.getElementById("a-29").innerHTML = dapancau29;
    };
    radioBtns29.forEach(radioBtn => {
        radioBtn.addEventListener("change",findDapancau29);
    });
</script>

