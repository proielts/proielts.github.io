<!-- Button --->
<script>
const anchors = ['q-27', 'q-28', 'q-29', 'q-30', 'q-31', 'q-32', 'q-33', 'q-34', 'q-35', 'q-36', 'q-37', 'q-38', 'q-39', 'q-40'];
const nextBtn = document.querySelector('.button-next');
const prevBtn = document.querySelector('.button-previous');
let index = 0;
function navNext(e) {
  index = (index === anchors.length - 1) ? 0 : ++index;
  e.target.href = `#${anchors[index]}`;
}
function navPrev(e) {
  index = (index === 0) ? anchors.length-1 : --index;
  e.target.href = `#${anchors[index]}`;
}
nextBtn.addEventListener('click', navNext);
prevBtn.addEventListener('click', navPrev);
</script>
