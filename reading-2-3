<!-- ghi-chu--->
<script>
$(document).ready(function(){
    $("#nut-ghi-chu").click(function(){
        document.getElementById("ghi-chu").style.display = "block";
        document.getElementById("ghi-chu").style.zIndex = "10";
        document.getElementById("ghi-chu").style.top = event.pageY + "px";
        document.getElementById("ghi-chu").style.left = event.pageX + "px";

        var span = document.createElement("span");
    span.className = "selected";
    
    if (window.getSelection) {
        var sel = window.getSelection();
        if (sel.rangeCount) {
            var range = sel.getRangeAt(0).cloneRange();
            range.surroundContents(span);
            sel.removeAllRanges();
            sel.addRange(range);
        }
    document.getElementById("menu-click-right").style.display = "none";
    }

    });

    });
</script>
